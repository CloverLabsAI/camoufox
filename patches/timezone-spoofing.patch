+void nsGlobalWindowInner::SetTimezone(const nsAString& timezone, ErrorResult& aRv) {
+  uint32_t userContextId = 0;
+
+  if (Document* doc = GetDoc()) {
+    if (nsIPrincipal* p = doc->NodePrincipal()) {
+      userContextId = p->OriginAttributesRef().mUserContextId;
+    }
+  }
+
+  if (userContextId == 0) {
+    if (nsIDocShell* ds = GetDocShell()) {
+      auto* concrete = static_cast<nsDocShell*>(ds);
+      userContextId = concrete->GetOriginAttributes().mUserContextId;
+    }
+  }
+
+  if (userContextId == 0) {
+    aRv.ThrowSecurityError("Unable to resolve user context ID for this context");
+    return;
+  }
+
+  TimezoneManager::SetTimezone(userContextId, timezone);
+
+  NS_LossyConvertUTF16toASCII timezoneASCII(timezone);
+  
+  // Per-realm timezone (true per-context isolation for this JS realm)
+  if (JSContext* cx = nsContentUtils::GetCurrentJSContext()) {
+    JS::SetRealmTimeZoneOverride(cx, timezoneASCII.get());
+    
+    // Self-destruct: remove setTimezone function after use
+    JS::Rooted<JSObject*> global(cx, JS::CurrentGlobalOrNull(cx));
+    if (global) {
+      JS_DeleteProperty(cx, global, "setTimezone");
+    }
+  }
+  
+  // Global fallback for workers, iframes without per-realm override
+  nsJSUtils::SetTimeZoneOverride(timezoneASCII.get());
+}
